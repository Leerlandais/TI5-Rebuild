{{ form_start(form) }}
<section class="featured-lis" >
    <div class="container-fluid flex flex-col justify-center items-center mx-auto">

        <form>
            <div class="mb-3 flex flex-col text-center">
                <label for="title" class="form-label">Title</label>
                {{ form_widget(form.title,
                    {'attr': {'class': "form-control border-2 border-gray-800",
                        'id': 'title',
                        'placeholder': 'Title'}}) }}
            </div>
            <div class="mb-3 flex flex-col text-center">
                <label for="text" class="form-label">Text</label>
                {{ form_widget(form.text,
                    {'attr': {'class': "form-control border-2 border-gray-800",
                        'id': 'text',
                        'placeholder': 'Text',
                        'type' : 'textarea',
                        'cols' : 80,
                        'rows' : 10}}) }}
            </div>
            <div class="border border-1 border-gray-800">
                <label for="sections">Sections</label>
                {{ form_widget(form.sections, {
                    'attr': {
                        'id': 'sections',
                        'class': 'flex flex-row gap-4 mx-auto flex-wrap'}}) }}
            </div>

            <div class="border border-1 border-gray-800 w-6/12 mt-4">
                <label for="tags">Tags</label>

                {{ form_widget(form.tags, {
                    'attr': {
                        'id': 'sections',
                        'class': 'flex flex-row gap-4 mx-auto flex-wrap'}}) }}
            </div>
            <button type="submit"
                    class="flex justify-center items-center bg-blue-800 hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue text-white py-2 px-4 rounded-md transition duration-300 gap-2 my-4">
                {{ button_label|default('Post') }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 24 24" id="send" fill="#fff">
                    <path fill="none" d="M0 0h24v24H0V0z"></path>
                    <path d="M3.4 20.4l17.45-7.48c.81-.35.81-1.49 0-1.84L3.4 3.6c-.66-.29-1.39.2-1.39.91L2 9.12c0 .5.37.93.87.99L17 12 2.87 13.88c-.5.07-.87.5-.87 1l.01 4.61c0 .71.73 1.2 1.39.91z"></path>
                </svg>
            </button>
        </form>
    </div>
</section>
{{ form_end(form) }}
