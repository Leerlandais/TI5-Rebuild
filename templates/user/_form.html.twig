<div class="max-w-screen-sm mx-auto flex flex-col text-center">
    {{ form_start(form) }}
    <div class="mb-3 flex flex-col">
        <label for="{{ form.username.vars.id }}" class="text-blue-800">Username</label>
        {{ form_widget(form.username, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Name'}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label for="{{ form.fullname.vars.id }}" class="text-blue-800">Full Name</label>
        {{ form_widget(form.fullname, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Your full name'}}) }}
        {{ form_errors(form.fullname) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label for="{{ form.email.vars.id }}" class="text-blue-800">Email</label>
        {{ form_widget(form.email, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Email Address'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label for="{{ form.img_loc.vars.id }}" class="text-blue-800">Image</label>
        {{ form_widget(form.img_loc, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Image URL'}}) }}
        {{ form_errors(form.img_loc) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label for="{{ form.quote.vars.id }}" class="text-blue-800">Quote</label>
        {{ form_widget(form.quote, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Favourite Quote'}}) }}
        {{ form_errors(form.quote) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label class="text-blue-800">Password</label>
        {{ form_widget(form.password.first, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Password'}}) }}
        {{ form_errors(form.password.first) }}
    </div>
    <div class="mb-3 flex flex-col">
        <label class="text-blue-800">Confirm Password</label>
        {{ form_widget(form.password.second, {'attr': {'class': "border-2 border-gray-800", 'placeholder': 'Confirm Password'}}) }}
        {{ form_errors(form.password.second) }}
    </div>
    <button class="rounded-md bg-blue-800 py-2 px-4 border border-transparent text-center text-sm text-white transition-all shadow-md hover:shadow-lg focus:bg-green-700 focus:shadow-none active:bg-green-700 hover:bg-green-700 ml-2">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
